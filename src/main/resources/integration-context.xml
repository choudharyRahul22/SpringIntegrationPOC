<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:int="http://www.springframework.org/schema/integration"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration-4.3.xsd">

	
	
	<!-- Endpoint Sender -->
	<int:gateway default-request-channel="inputChannel" service-interface="com.integration.PrintGateway"></int:gateway>	
	
	<!-- Channel -->
	<int:channel id="inputChannel">
		<int:queue capacity="10"></int:queue>
	</int:channel>
	
	<bean class="com.integration.PrintService" id="printService"/>
	
	<!-- Endpoint Receiver  -->
	<int:service-activator input-channel="inputChannel" ref="printService" method="print">
		<!-- Used to connect endpoint to pollable channel, poll every 5 seconds, 2 message per poll -->
		<int:poller fixed-rate="5" time-unit="SECONDS" max-messages-per-poll="2"/>
	</int:service-activator>

</beans>
